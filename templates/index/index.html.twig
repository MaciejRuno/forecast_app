{% extends 'base.html.twig' %}

{% block body %}

<h1 class="jumbotron text-center">Weather Forecast App</h1>

<div class="d-flex justify-content-center container">
    <form class="d-flex flex-column" action="/forecast" method="get">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <div class="form-group">
            <label for="city">City: </label>
            <input class="form-control" type="text" id="city" name="city" placeholder="Warsaw">
        </div>
        <div class="form-group">
            <label for="country">Country: </label>
            <input class="form-control" type="text" id="country" name="country" placeholder="PL">
        </div>
        <input type="submit" value="Submit">
    </form>
</div>
{% endblock %}
